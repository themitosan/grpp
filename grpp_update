#
#   Git Repo Preservation Project (GRPP)
#   Created by Juliana (@themitosan)
#   grpp_update.sh
#

# Display logo and log start update process
./src/shell/logo.sh
echo -e "==="
echo -e "=== Starting grpp update process"
echo -e "==="
echo 

echo -e "=== Reset grpp dir and fetch latest updates"
git reset --hard
git fetch
git pull

echo 
echo -e "=== Making all shell scripts executable"
for entry in `ls src/shell`
do
    chmod +x "src/shell/$entry"
done
chmod +x init
chmod +x import
chmod +x update
chmod +x grpp_update
echo -e "Done!"

# Log process complete
echo 
echo -e "=== Process Complete! ==="
echo -e "Press \033[1;32m[ENTER]\033[0m to exit"
read -p ""
clear