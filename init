#
#   Git Repo Preservation Project (GRPP)
#   Created by Juliana (@themitosan)
#   init.sh
#

# Make logo executable and display it
chmod +x src/shell/logo.sh
./src/shell/logo.sh

# Make scripts executable
echo 
echo -e "=== Making scripts as executable"
for entry in `ls src/shell`
do
    chmod +x "src/shell/$entry"
done
chmod +x import
chmod +x update
chmod +x grpp_update

# Execute node init script
node src/js/init.js

# End process
echo 
echo -e "=== Process Complete ==="
echo -e "Press \033[1;32m[ENTER]\033[0m to exit"
read -p ""
clear